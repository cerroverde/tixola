<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragment.NewPointFragment">

    <!-- Note: A RecyclerView can also be used -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        android:clipToPadding="false">

        <!-- Scrollable content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Titulo -->
            <TextView
                android:id="@+id/newpoin_tv_main_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nuevo_point"
                android:paddingBottom="@dimen/dp_16"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                style="@style/Theme.Tixola.Titulos"/>

            <!-- Seccion Nombre -->
            <LinearLayout
                android:id="@+id/newpoint_ll_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newpoin_tv_main_titulo">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/newpoint_ti_local"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="200dp"
                    android:textColorHint="@color/white"
                    app:hintTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textCursorDrawable="@null"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:drawableTint="@color/white"
                        android:textColorHint="@color/white"
                        style="@style/Theme.Tixola.InputText"
                        android:hint="Nombre" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Seccion Geolocalizacion -->
            <LinearLayout
                android:id="@+id/newpoint_ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newpoint_ll_local">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/newpoint_ti_address"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="200dp"
                    android:textColorHint="@color/white"
                    app:hintTextColor="@color/white">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textCursorDrawable="@null"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:drawableTint="@color/white"
                        android:textColorHint="@color/white"
                        style="@style/Theme.Tixola.InputText"
                        android:hint="Ubicacíon"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Seccion Telefono -->
            <LinearLayout
                android:id="@+id/newpoint_ll_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newpoint_ll_address">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/newpoint_ti_tel"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="200dp"
                    android:textColorHint="@color/white"
                    app:hintTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textCursorDrawable="@null"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:drawableTint="@color/white"
                        android:textColorHint="@color/white"
                        style="@style/Theme.Tixola.InputText"
                        android:hint="Teléfono"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        style="@style/Widget.MaterialComponents.BottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:backgroundTint="@color/colorOnPrimary"

        app:menu="@menu/menu_newpoint" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingBtnNewPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_save"
        android:src="@drawable/ic_save"
        app:rippleColor="@color/white"
        app:layout_anchor="@id/bottomAppBar"
        android:contentDescription="@string/app_name"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>