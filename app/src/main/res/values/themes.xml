<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tixola" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:itemBackground">@color/colorPrimary</item>

        <item name="android:actionMenuTextColor">@color/white</item>

    </style>

    <style name="Theme.Tixola.PopupOverlay" parent="Theme.Tixola">
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
        <item name="android:colorForegroundInverse">@color/foreground_material_dark</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:colorBackgroundCacheHint">
            @color/abc_background_cache_hint_selector_material_light
        </item>
        <item name="colorBackgroundFloating">@color/background_floating_material_light</item>

        <item name="android:spotShadowAlpha">0.5</item>
    </style>

    <!-- No Menu Bar Theme -->
    <style name="Theme.Tixola.NoActionBar" parent="Theme.Tixola">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Menu Bar Theme -->
    <style name="Theme.Tixola.NavigationMenu" parent="Theme.Tixola">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColorSecondary">@color/colorPrimaryVariant</item>
        <!-- On Selected Item -->
        <item name="colorControlHighlight">@color/highlight</item>
        <item name="android:textColorHighlight">@color/red</item>
    </style>

    <style name="Theme.Tixola.AppBarOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="contentPaddingStart">18dp</item>
    </style>

    <style name="Theme.Tixola.Menu.Header" parent="Theme.Tixola">
        <item name="fontFamily">@font/nixie_one</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Tixola.Menu.HeaderLandscape" parent="Theme.Tixola">
        <item name="fontFamily">@font/nixie_one</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:titleMarginTop">0dp</item>
    </style>

    <style name="ThemeOverlay.Tixola.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Tixola.Titulos">
        <item name="fontFamily">@font/nixie_one</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <!-- Input Box Text -->
    <style name="Theme.Tixola.TextInputLayout.OutlinedBox.Custom" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/white</item>
        <item name="android:color">@color/white</item>

        <!-- Text Styles -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dp_24</item>
        <item name="android:textCursorDrawable">@null</item>

        <!-- Box Appereance -->
        <item name="colorControlActivated">@color/white</item>
        <item name="boxStrokeColor">@color/input_text_colorstroke_outlined</item>

        <!-- Hint Styles -->
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>

    </style>

    <style name="Theme.Tixola.FieldText" parent="Theme.Tixola">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dp_24</item>
    </style>

    <style name="Theme.Tixola.InputText" parent="Theme.Tixola">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/colorOnPrimary</item>
        <item name="hintTextColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>


    <style name="Theme.Tixola.InputTextColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterOverflowTextAppearance">@color/mtrl_indicator_text_color</item>
    </style>

    <style name="Theme.Tixola.CustomDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>

        <item name="android:color">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="backgroundColor">@color/colorSecondary</item>

    </style>

</resources>